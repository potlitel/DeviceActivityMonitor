@* 📁 DAM.Frontend/Shared/Components/UI/LoadingState.razor *@

<MudOverlay Visible="true" DarkBackground="false" Absolute="true">
    <MudContainer MaxWidth="MaxWidth.Small" Class="mt-16">
        <MudPaper Elevation="3" Class="pa-8 text-center">
            <MudStack AlignItems="AlignItems.Center">
                <MudProgressCircular Indeterminate="true" 
                                   Size="Size.Large" 
                                   Color="Color.Primary" />
                
                <MudText Typo="Typo.h6" Class="mt-4">
                    @Message
                </MudText>
                
                @if (!string.IsNullOrEmpty(SubMessage))
                {
                    <MudText Typo="Typo.body2" Class="grey--text">
                        @SubMessage
                    </MudText>
                }
            </MudStack>
        </MudPaper>
    </MudContainer>
</MudOverlay>

@code {
    [Parameter] public string Message { get; set; } = "Cargando...";
    [Parameter] public string? SubMessage { get; set; }
}